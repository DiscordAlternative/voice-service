# Server Configuration
PORT=3003
NODE_ENV=development

# Public IP for WebRTC (replace with your server's public IP in production)
PUBLIC_IP=127.0.0.1

# TURN/STUN Server Configuration
TURN_USERNAME=voice-user
TURN_CREDENTIAL=secure-password
TURN_PORT=3478

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration (must match API service)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# MediaSoup RTP Port Range
RTC_MIN_PORT=40000
RTC_MAX_PORT=49999

# Logging
LOG_LEVEL=info
